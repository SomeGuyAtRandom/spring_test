<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="parentTriangle" class="la.random.spring.shapes.Triangle">
		<property name="points">
			<list>
				<ref bean="origin" />
			</list>
		</property>
	</bean>

	<bean id="triangle1" class="la.random.spring.shapes.Triangle"
		parent="parentTriangle">
		<property name="points">
			<list>
				<ref bean="base" />
			</list>
		</property>
	</bean>

	<bean id="triangle2" class="la.random.spring.shapes.Triangle"
		parent="parentTriangle">
		<property name="points">
			<list merge="true">
				<ref bean="base" />
				<ref bean="height" />
				<ref bean="height" />
				
			</list>
		</property>
	</bean>


	<bean id="height" class="la.random.spring.shapes.Point">
		<property name="x" value="0" />
		<property name="y" value="11" />
	</bean>

	<bean id="origin" class="la.random.spring.shapes.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>

	<bean id="base" class="la.random.spring.shapes.Point">
		<property name="x" value="20" />
		<property name="y" value="0" />
	</bean>


</beans>
